@model _23DH114638_MyStore.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-bg-dark">Cập Nhật Danh Mục</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @* Thông tin này sẽ được truyền sang Bind(Include(...))  *@
        @Html.HiddenFor(model => model.CategoryID) 


        @* Nhúng PartialView vào form cha  *@
        @Html.Partial("PV_CreateEditCategory", Model)
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
